<Application x:Class="HelpAct.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HelpAct"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/TabControlStyle.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="Styles/PasswordBoxStyle.xaml"/>
                <ResourceDictionary Source="Styles/MenuStyle.xaml"/>
                <ResourceDictionary Source="Styles/MenuUserStyle.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="Forum">fonts/#Forum</FontFamily>
            <FontFamily x:Key="Gabriela">fonts/#Gabriela</FontFamily>
            
        </ResourceDictionary>
        
    </Application.Resources>
    
</Application>
